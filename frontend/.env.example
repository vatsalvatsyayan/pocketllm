# Frontend Environment Variables
# Copy this file to .env.local for local development

# Backend API Base URL
# For Docker: use http://backend:9000/api
# For local dev: use http://localhost:9000/api
VITE_API_BASE_URL=http://localhost:9000/api

# Authentication Mode
# Set to 'true' to use mock authentication (development only)
# Set to 'false' or leave empty to use real JWT authentication
VITE_MOCK_AUTH=false

# Chat Mode
# Set to 'true' to use mock chat responses (development only)
# Set to 'false' or leave empty to use real backend chat
VITE_MOCK_CHAT=false

# Application Metadata
VITE_APP_NAME=pocketLLM Portal
VITE_APP_VERSION=1.0.0
